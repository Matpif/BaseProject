        <?php
        if ($this->getSchedulerId()):
        ?>
            <a href="<?= \App\libs\App\Router::getUrlAction('Task', 'Scheduler', 'scheduler').'/id/'.$this->getSchedulerId() ?>"><i class="fa fa-angle-double-left" aria-hidden="true"></i>&nbsp;<?= $this->__('Return to scheduler'); ?></a>
