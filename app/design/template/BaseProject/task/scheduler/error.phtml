            /** @var \BaseProject\Task\Model\Error $error */
            foreach ($_errors as $error):
                ?>
                <tr>
                    <td><?= $error->getId() ?></td>
                    <td><?= $error->getCodeError() ?></td>
                    <td><?= $error->getMessage() ?></td>
